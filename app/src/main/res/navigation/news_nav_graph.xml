<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_nav_graph"
    app:startDestination="@id/popularNewsFragment">

    <fragment
        android:id="@+id/popularNewsFragment"
        android:name="com.stokes.newsapp.ui.PopularNewsFragment"
        android:label="fragment_popular_news"
        tools:layout="@layout/fragment_popular_news" >
        <action
            android:id="@+id/action_popularNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.stokes.newsapp.ui.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" >
        <argument
            android:name="clickedArticle"
            app:argType="com.stokes.newsapp.data.models.Result" />
    </fragment>
</navigation>