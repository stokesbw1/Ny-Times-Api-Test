<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/shape_layout"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circular_bordershape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        ><androidx.cardview.widget.CardView
    android:id="@+id/myCardView"
    android:layout_width="70dp"
    android:layout_height="70dp"
    app:cardCornerRadius="35dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/article_image"
        android:background="#11697070"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
</androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/article_open"
        app:layout_constraintStart_toEndOf="@+id/shape_layout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is temp text"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:textColor="#B96E6E6E"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/article_authour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is temp text"
            android:textAlignment="viewStart"
            android:textSize="17sp"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/article_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="right"
            android:text="This is temp text"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:drawableStart="@drawable/ic_event"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/article_open"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_alignParentEnd="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>